<div class="roomspace"></div>
<h1 class="ui center aligned header roomspace">Welcome to MessageMe - a complete ChatApp</h1>

<h4 class="ui center aligned medium icon header">
  <i class="circular blue power off icon"></i>
  Log in to continue
</h4>

<div class="roomspace"></div>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">

      <%= form_for(:session, html: { class: "ui form", role: "form" }, url: login_path) do |form| %>
        <div class="field">
          <%= form.label :username, "Username" %>
          <div class="ui left icon input">
          <%= form.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= form.label :password, "Password" %>
          <div class="ui left icon input">
            <%= form.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= form.submit "Login", class: "ui blue submit button" %>
      <% end %>

    </div>
    <div class="middle aligned column">
      <div class="ui big blue button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>